<% if obj.errors.any? %>
  <div class="row">
    <div class="col-md-8 offset-2">
      <div class="alert alert-danger">
        <h5>
          <%= pluralize(obj.errors.count, "error") %>
          prohibited this <%= obj.class %> from being saved:
        </h5>
        <ul>
          <% obj.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>
