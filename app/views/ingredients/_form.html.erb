<%= render 'shared/errors', obj: @ingredient %>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@ingredient, html: { class: "form-horizontal", role: "form" }) do |f| %>
      <div class="form-group row">
        <div class="control-label col-md-2">
          <%= f.label :name %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :name, class: "form-control", placeholder: "Enter ingredient", autofocus: true %>
        </div>
      </div>

      <div class="form-group row">
        <div class="offset-2 col-md-10">
          <%= f.submit(@ingredient.new_record? ? "Create ingredient" : "Edit ingredient",
          class: "btn btn-primary btn-lg btn-xlarge") %>
        </div>
      </div>

    <% end %>
    <div class="col-md-5 offset-4 colormatch">
      [ <%= link_to "Cancel request and return to ingredients listing", ingredients_path %> ]
    </div>
  </div>
</div>
